generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Affiliate {
  id                String    @id @default(uuid())
  fullName          String
  phone             String
  email             String
  rg                String
  cpf               String
  cnh               String
  cnhCategory       String
  cnhExpirationDate String
  accounts          Account[]
  addresses         Address[]
  events            Event[]
}

model Event {
  id            String    @id @default(uuid())
  affiliateId   String
  eventName     String
  eventLocation String
  eventType     String
  affiliate     Affiliate @relation(fields: [affiliateId], references: [id])
}

model Address {
  id          String    @id @default(uuid())
  affiliateId String
  address     String
  city        String
  state       String
  zipCode     String
  affiliate   Affiliate @relation(fields: [affiliateId], references: [id])
}

model Account {
  id          String    @id @default(uuid())
  affiliateId String
  username    String
  password    String
  affiliate   Affiliate @relation(fields: [affiliateId], references: [id])
}
