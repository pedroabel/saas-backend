generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Affiliate {
  id                String  @id @default(uuid())
  fullname          String
  phone             String?
  email             String? @unique
  rg                String? @unique
  cpf               String? @unique
  cnh               String? @unique
  cnhCategory       String?
  cnhExpirationDate String?

  vehicle   Vehicle?
  addresses Address[]
  user      User[]
  events    Event[]
}

model ThirdParty {
  id       String @id @default(uuid())
  fullName String

  event Event?
}

model Vehicle {
  id           String  @id @default(uuid())
  affiliateId  String  @unique
  brand        String?
  model        String?
  licensePlate String?
  color        String?
  chassiss     String?
  yearModel    String?
  fipe         Float?
  fuelType     String?

  affiliate Affiliate @relation(fields: [affiliateId], references: [id])
}

model Event {
  id           String  @id @default(uuid())
  affiliateId  String
  thirdPartyId String  @unique
  type         String?
  location     String?

  Affiliate  Affiliate  @relation(fields: [affiliateId], references: [id])
  ThirdParty ThirdParty @relation(fields: [thirdPartyId], references: [id])
}

model Address {
  id          Int       @id @default(autoincrement())
  affiliateId String
  address     String?
  city        String?
  state       String?
  zipCode     String?
  Affiliate   Affiliate @relation(fields: [affiliateId], references: [id]) // Relacionamento com a tabela Affiliate
}

model User {
  id            Int       @id @default(autoincrement())
  affiliateId   String
  Affiliatename String    @unique
  password      String
  Affiliate     Affiliate @relation(fields: [affiliateId], references: [id]) // Relacionamento com a tabela Affiliate
}
