generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Affiliate {
  id               String    @id @default(uuid())
  fullName         String
  phone            String
  email            String
  cpf              String
  cnhFile          String[]
  personalDocument String[]
  proofAddress     String
  account          Account[]
  address          Address[]
  event            Event[]
  vehicle          Vehicle[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Vehicle {
  id           String    @id @default(uuid())
  affiliateId  String
  brand        String
  model        String
  licensePlate String
  color        String
  chassis      String
  yearModel    String
  fipeValue    String
  fuelType     String
  affiliate    Affiliate @relation(fields: [affiliateId], references: [id])
}

model Event {
  id                 String @id @default(uuid())
  affiliateId        String
  protocol           String
  type               String
  location           String
  policeReportNumber String
  hasThirdParty      String
  thirdPartyEmail    String
  thirdPartyPhone    String
  driver             String

  affiliate Affiliate @relation(fields: [affiliateId], references: [id])

  report    Report[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id             String   @id @default(uuid())
  eventId        String
  description    String
  apparentDamage String
  vehiclePhotos  String[]
  reportVideo    String

  event Event @relation(fields: [eventId], references: [id])
}

model Address {
  id          String    @id @default(uuid())
  affiliateId String
  address     String
  city        String
  state       String
  zipCode     String
  affiliate   Affiliate @relation(fields: [affiliateId], references: [id])
}

model Account {
  id          String    @id @default(uuid())
  affiliateId String
  username    String
  password    String
  affiliate   Affiliate @relation(fields: [affiliateId], references: [id])
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String?
  avatar     String?
  role       String   @default("user")
  supabaseId String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
