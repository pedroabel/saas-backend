generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
model Attendee {
  id             String @id @default(uuid())
  firstName      String
  lastName       String
  email          String   @unique
  phone          String
  addresses      Address[] // Relacionamento com a tabela Address
  accounts       Account[] // Relacionamento com a tabela Account
  events         Event[]   // Relacionamento com a tabela Event
}

model Event {
  id             String @id @default(uuid())
  attendeeId         String
  eventName      String
  eventType      String
  eventLocation   String
  attendee           Attendee     @relation(fields: [attendeeId], references: [id]) // Relacionamento com a tabela attendee
} 

model Address {
  id        Int    @id @default(autoincrement())
  attendeeId    String
  address   String
  city      String
  state     String
  zipCode   String
  attendee      Attendee   @relation(fields: [attendeeId], references: [id]) // Relacionamento com a tabela attendee
}

model Account {
  id             Int    @id @default(autoincrement())
  attendeeId         String
  attendeename       String @unique
  password       String
  attendee           Attendee   @relation(fields: [attendeeId], references: [id]) // Relacionamento com a tabela attendee
}
